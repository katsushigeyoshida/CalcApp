<Window x:Class="CalcApp.ConvFileSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalcApp"
        mc:Ignorable="d"
        Title="ConvFileSelect" Height="450" Width="300" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <ListBox x:Name="LbFileList" Margin="0,0,0,35" MouseDoubleClick="LbFileList_MouseDoubleClick" />
        <Button x:Name="BtImport" Content="インポート" Width="70" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="BtImport_Click" />
        <Button x:Name="BtOK" Content="OK" Width="50" Height="30" VerticalAlignment="Bottom" Margin="0,0,50,0" HorizontalAlignment="Right" Click="BtOK_Click"  />
        <Button x:Name="BtCancel" Content="Cancel" Width="50" Height="30" VerticalAlignment="Bottom" Margin="0,0,0,0" HorizontalAlignment="Right" Click="BtCancel_Click"  />
    </Grid>
</Window>
